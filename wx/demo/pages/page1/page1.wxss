p {
    color: blue;
}
.pageofpetstore{
    height: 82vh;
    width: 100%;
}
.mystickyheader{
    height: 8vh;
    width: 100%;
    background-color: #426FFE;
    position: sticky;
    top: 0px;
}
.card{
    width: 85%;
    margin-left: 7.5%;
    margin-top: 20px;
    height: 300px;
    background: white;
    border-radius: 20rpx;
    box-shadow: 5px 5px 5px #cdcfcf;
}
.cardtitle{
    background: linear-gradient(to right,#39A0FF, #8FFF85);
    height: 32.5px;
    width: 65px;
    border-radius: 5px;
    position: relative;
    left: 30px;
    top: -10px;
}
.imageloader{
    width: 190px;
    height: 190px;
    position: absolute;
    top: 40px;
    left: 9px;
}
.pageofactivity{
    width: 100%;
    height: 82vh;
}
.personaldatashower{
    width: 250px;
    height: 25px;
    border-radius: 5px;
    border: 2px solid white;
    display: flex;
    flex-direction: row;
}